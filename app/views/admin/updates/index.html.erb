<p id="notice"><%= notice %></p>

<h1>Listing Updates</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Text</th>
      <th>File</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.text %></td>
        <td><%= update.file_file_name %></td>
        <td><%= update.created_at.strftime("%a, %d %b %y %l:%M %p") %></td>
        <td><%= update.updated_at.strftime("%a, %d %b %y %l:%M %p") %></td>
        <td><%= link_to 'Show', update %></td>
        <td><%= link_to 'Edit', edit_update_path(update) %></td>
        <td><%= link_to 'Destroy', update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

